  <body>

    <%= render 'layouts/header' %>

    <div class="container-fluid" style="margin-top: 20px;">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li><%= link_to 'Home', '#' %></li>
            <li><%= link_to 'Key Indicators', key_indicators_dashboards_path %></li>
            <li><%= link_to 'Weekly Reports', '#' %></li>
            <li><%= link_to 'Plan Management', plan_comparison_dashboards_path %></li>
          </ul>
        </div>
        <div class="col-sm-9 col-md-10 main">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
