<%= render partial: 'notices/shared/paragraph', :locals => {
  content: "<h3><span style='color:#ff0000;'>[SHOP5B]<br>
  Renewal Employee Open Enrollment Completed<br>
  (with minimum participation or 1/1 coverage effective date)</span></h3>".html_safe} %>

<%= render partial: 'notices/shared/logo' %>
<%= render partial: 'notices/shared/date', :locals => {notice: notice} %>
<%= render partial: "notices/shared/address", :locals => {notice: notice} %>
<%= render partial: 'notices/shared/paragraph', :locals => { content: "<h3><strong'>RE: Open Enrollment Completed</h3></strong>".html_safe} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td>Dear <%= notice.primary_fullname %>:  </td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', :locals => { content: "Congratulations!  Your employees have completed open enrollment and have satisfied the requirements to participate in group health coverage through #{Settings.site.short_name}.  Your group health plan coverage will take effect as of #{notice.plan.try(:coverage_start_on).try(:to_s)}.".html_safe} %>

  <%= render partial: 'notices/shared/paragraph', :locals => { content: "Your bill will continue to be due on the last day of the month for the next month’s coverage.  The billing cycle and late payment grace period will remain the same for this coverage year.".html_safe} %>

<%= render partial: 'notices/shared/paragraph', :locals => { content: "To view the activity of your employees’ open enrollment:<ul><li>Log in to your #{Settings.site.short_name} employer account</li>
  <li>Select “Employees” from the menu at the top of your account page</li>
  <li>You will see a list of all eligible employees showing each action they have taken on #{Settings.site.short_name} during the open enrollment period. Each entry will have one of the following statuses:<br/>
  <ul><li>No Coverage Selected</li>
  <li>Coverage Selected</li>
  <li>Coverage Waived</li>
  <li>Terminated</li>
  </li></ul></ul>".html_safe} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals => { contents: [], heading: 'For Questions or Assistance:', sub_heading: ''} %>
<%= render partial: 'notices/shared/unordered_list', locals: {
 previous: "Contact your broker for further assistance. You can also contact #{Settings.site.short_name} with any questions:",
 listings: ["Online at #{notice.hbe.url};",
            "By email at #{notice.hbe.email}; or",
            "By calling #{notice.hbe.phone}."] }%>

<% if notice.broker.present? %>
  <%= render partial: 'notices/shared/broker_contact_info', locals: {broker: notice.broker} %>
<% else %>
  <%= render partial: 'notices/shared/paragraph', locals: {content: "If you do not currently have a broker, you can reach out to one of our many trained experts by clicking on the “Find a Broker” link in your employer account or calling  #{notice.hbe.phone}."} %>
<% end %>

<%= render partial: 'notices/shared/paragraph', :locals => { content: "This notice is being provided in accordance with 45 C.F.R. 155.725(f)".html_safe} %>
